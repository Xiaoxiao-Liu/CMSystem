@model CMSystem.Models.Event


<div id="progressPercentage" class="row">
    <div class="col-xs-10  col-xs-offset-1 text-center">
        <div class="row">
            @if (ViewBag.Percent == 0)
            {
                <h3>Welcome to sign up !</h3>
            }
            else if (ViewBag.Percent >= 100)
            {
                <h2>Oooops! Better come earlier next time!</h2>
                <h2> @(ViewData["Number"]) people have signed up!!</h2>
                <div class="col-xs-8 col-xs-offset-2">
                    <div class="progress">
                        <div class="progress-bar progress-bar-success" role="progressbar"
                             style="width:100%"></div>
                    </div>
                </div>
            }
            else
            {
                <h2> @(ViewData["Number"])% people have signed up!!</h2>
                    <div class="col-xs-8 col-xs-offset-2">
                        <div class="progress">
                            <div class="progress-bar progress-bar-info" role="progressbar"
                                 style="width:@(Html.AttributeEncode(ViewBag.Percent))%"></div>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>

